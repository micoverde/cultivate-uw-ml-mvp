# Azure Blob Storage Configuration Template
# Copy this file to .env and fill in your Azure credentials
# Issue #184 - Production ML Training Data Pipeline

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT=cultivatemldata
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=cultivatemldata;AccountKey=YOUR_STORAGE_KEY;EndpointSuffix=core.windows.net

# Azure Storage Containers
AZURE_STORAGE_CONTAINER_TRAINING=training-data
AZURE_STORAGE_CONTAINER_TRUTH=ground-truth
AZURE_STORAGE_CONTAINER_AUDIT=audit-logs

# Authentication Settings
RETRAIN_PASSWORD=lev
RETRAIN_PASSWORD_HASH=$2b$12$YOUR_BCRYPT_HASH_HERE

# Rate Limiting
MAX_RETRAIN_ATTEMPTS=3
RETRAIN_LOCKOUT_HOURS=1
MAX_RETRAIN_ATTEMPTS_PER_HOUR=3

# Training Configuration
MIN_SAMPLES_FOR_RETRAIN=10
MAX_BATCH_SIZE=1000
DEFAULT_EPOCHS=10
DEFAULT_LEARNING_RATE=0.001

# Redis Configuration (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Admin Configuration
ADMIN_TOKEN=admin_secret_token

# Azure Monitor (optional)
AZURE_MONITOR_CONNECTION_STRING=InstrumentationKey=YOUR_KEY;IngestionEndpoint=https://YOUR_REGION.applicationinsights.azure.com/
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=YOUR_KEY

# API Endpoints
ML_API_ENDPOINT=https://cultivate-ml-api.ashysky-fe559536.eastus.azurecontainerapps.io

# Feature Flags
ENABLE_AZURE_BLOB_STORAGE=true
ENABLE_PASSWORD_PROTECTION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_REAL_TRAINING=true

# Data Retention
DATA_RETENTION_DAYS=90
MODEL_CHECKPOINT_RETENTION_COUNT=10

# Logging
LOG_LEVEL=INFO
LOG_TO_BLOB=true