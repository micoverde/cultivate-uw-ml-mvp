# ===========================================
# Cultivate Learning ML MVP Environment Configuration
# ===========================================

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=true
API_RELOAD=true

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=localhost

# Database Configuration (when implemented)
# DATABASE_URL=postgresql://username:password@localhost:5432/cultivate_db
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=cultivate_db
# DATABASE_USER=cultivate_user
# DATABASE_PASSWORD=your_secure_password

# Machine Learning Model Configuration
ML_MODEL_PATH=./models/
ML_CACHE_DIR=./models/cache/
ML_BATCH_SIZE=32
ML_MAX_SEQUENCE_LENGTH=512

# Audio Processing
AUDIO_SAMPLE_RATE=16000
AUDIO_MAX_DURATION=300  # seconds
AUDIO_FORMAT=wav

# Video Processing
VIDEO_FRAME_RATE=30
VIDEO_MAX_DURATION=600  # seconds
VIDEO_RESOLUTION=720p

# Storage Configuration
STORAGE_PATH=./data/
UPLOAD_MAX_SIZE=100  # MB
ALLOWED_EXTENSIONS=mp4,wav,mp3,jpg,png,pdf

# External APIs (when integrated)
# OPENAI_API_KEY=sk-your-openai-key-here
# AZURE_COGNITIVE_SERVICES_KEY=your-azure-key-here
# GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Development Settings
LOG_LEVEL=DEBUG
ENABLE_DOCS=true
ENABLE_METRICS=false

# Research Data Configuration
RESEARCH_DATA_PATH=./data/research/
ANNOTATION_FORMAT=json
EXPORT_FORMAT=csv

# Performance Settings
WORKERS=4
TIMEOUT=300
KEEP_ALIVE=2

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test.db
PYTEST_WORKERS=auto