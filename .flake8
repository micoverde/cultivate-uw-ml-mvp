[flake8]
max-line-length = 88
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    dist,
    build,
    *.egg-info,
    .pytest_cache,
    node_modules

ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (allow in __init__.py)

per-file-ignores =
    __init__.py:F401

max-complexity = 12
docstring-convention = google