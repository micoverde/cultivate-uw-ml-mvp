{
  "name": "cultivate-uw-ml-mvp",
  "version": "1.0.0",
  "description": "Machine Learning MVP for analyzing educator-child interactions in early childhood education",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd src && python -m uvicorn api.main:app --reload --port 8000",
    "dev:frontend": "cd demo && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd demo && npm run build",
    "build:backend": "echo 'Python backend build complete'",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd src && python -m pytest ../tests/",
    "test:frontend": "cd demo && npm test",
    "serve": "npm run serve:frontend",
    "serve:frontend": "cd demo && npm run serve",
    "lint": "npm run lint:python && npm run lint:typescript && npm run lint:frontend",
    "lint:python": "cd src && flake8 . && black --check .",
    "lint:typescript": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:frontend": "cd demo && npm run lint",
    "format": "npm run format:python && npm run format:typescript && npm run format:frontend",
    "format:python": "cd src && black .",
    "format:typescript": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:frontend": "cd demo && npm run format",
    "typecheck": "npm run typecheck:root && npm run typecheck:frontend",
    "typecheck:root": "tsc --noEmit",
    "typecheck:frontend": "cd demo && npx tsc --noEmit",
    "install:all": "npm install && cd demo && npm install && cd .. && pip install -r requirements.txt",
    "clean": "rm -rf node_modules demo/node_modules demo/dist venv/__pycache__ src/**/__pycache__ dist *.tsbuildinfo demo/*.tsbuildinfo",
    "setup:env": "python -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "docker:build": "docker build -t cultivate-uw-ml .",
    "docker:run": "docker run -p 3000:3000 -p 8000:8000 cultivate-uw-ml",
    "prepare": "husky"
  },
  "keywords": [
    "machine-learning",
    "early-education",
    "educator-training",
    "constructivist-learning",
    "research",
    "ai",
    "computer-vision",
    "nlp"
  ],
  "author": "Warren & Claude",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.0.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/micoverde/cultivate-uw-ml-mvp.git"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "demo/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "config/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "src/**/*.py": [
      "black",
      "flake8"
    ]
  }
}
